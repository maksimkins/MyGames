@model IEnumerable<Comment>;
@{
    ViewData["Title"] = "Comments";
    var gameId = ViewBag.gameId;
}

<script>
  function DeleteComment(comment) {
    fetch("/Comment", {
      method: 'DELETE',
      body: comment,
      headers: {
        'Content-type': 'application/json; charset=UTF-8'
      }
    })
  }


  function PutComment(comment) {
    fetch("/Comment", {
      method: 'PUT',
      body: comment,
      headers: {
        'Content-type': 'application/json; charset=UTF-8'
      }
    })
  }
