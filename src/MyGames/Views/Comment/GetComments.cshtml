  let button = document.getElementById("change-button");
  console.log(button);
  button.addEventListener("submit", (e) => {
    e.preventDefault();

    let gameId = document.getElementById("game-id").nodeValue;
    let commentId = document.getElementById("comment-id").nodeValue;
